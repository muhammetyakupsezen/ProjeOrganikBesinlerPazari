        @if (Model.CartLines.Count > 0)
        {
            <div class="container pb-5">
                <div class="row">
                    <div class="col-md-12">

                        <h2>Sepet</h2>
                        <hr />

                        <table class="table table-bordered">

                            <thead>
                                <tr>
                                    <th></th>
                                    <th>Miktar</th>
                                    <th>Ürün Adı</th>
                                    <th>Fiyat</th>
                                    <th>Ara toplam</th>
                                    <td></td>

                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.CartLines)
                                {
                                    <tr>
                                        <td>
                                            <img src="~/Upload/@item.Urun.img" width="50" ; />
                                        </td>
                                        <td>@item.Quantity</td>
                                        <td>@item.Urun.UrunAdi</td>
                                        <td>@item.Urun.UrunFiyati  <i class="fa fa-try" aria-hidden="true"></i></td>
                                        <td>@((item.Urun.UrunFiyati * item.Quantity).ToString())  <i class="fa fa-try" aria-hidden="true"></i></td>
                                        <td>
                                            @using (Html.BeginForm("RemoveFromCart", "Cart"))
                                            {
                                                // @Html.HiddenFor("Id", item.Urun.UrunId)
                                                @*<a href="~/Cart/RemoveFromCart/@item.Urun.UrunId.ToString()" class="btn btn-warning btn-sm float-lg-left">
                                                        < button style="margin-left: 42%; border-radius:6px; " class="btn button-style button-style-2 mt-sm-5 mt-4" type="submit" name="name" id="BtnUrunBilgileri" value="Sepete Ekle" />

                                                        Sepete Ekle
                                                    </a>*@
                                                <a href="~/Cart/RemoveFromCart/@item.Urun.UrunId.ToString()" class="btn btn-danger btn-sm float-lg-left">
                                                    @*<i class="fa fa-angle-double-right" aria-hidden="true"></i>*@
                                                    <i class="fa fa-trash-o" aria-hidden="true"></i>

                                                    Sepetten Sil
                                                </a>
                                            }
                                        </td>


                                    </tr>
                                }

                            </tbody>
                            <tfoot>
                                <tr>
                                    <td colspan="5"></td>
                                    <td>@Model.TotalPrice().ToString("c") <i class="fa fa-try" aria-hidden="true"></i></td>

                                </tr>
                            </tfoot>


                        </table>

