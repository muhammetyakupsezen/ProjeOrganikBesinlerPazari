        <div class="container">

            <div class="form-group">
                <label style="padding-left:14px;">Kullanıcı Adı : </label>
                @Model.KullaniciAdi
            </div>

            @using (Html.BeginForm("SiparisDurumunuDegistir", "Order", FormMethod.Post))
            {

                @Html.HiddenFor(i => i.OrderId)

                @*@Html.DropDownListFor(i=>i.SiparisDurumu,"Sipariş Durumunu Seçin",new {@class="form-control"});*@
                <div class="form-group">
                    @Html.LabelFor(model => model.SiparisDurumu, htmlAttributes: new { @class = "control-label col-md-2" })

                    @Html.EditorFor(model => model.SiparisDurumu, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.SiparisDurumu, "", new { @class = "text-danger" })

                </div>


                <div class="col-md-3">
                    <button type="submit" class="btn btn-primary">Güncelle</button>
                </div>
            }
        </div>

        <hr />

        <div class="container">

            <div class="row">
                <div class="col-md-12">

                    <h2>Sipariş Detayları </h2>
                    <hr />




                    <d1 class="row">



                        <dt class="col-sm-3">Sipariş Id</dt>
                        <dd class="col-sm-9"> @Model.OrderId </dd>

                        <dt class="col-sm-3">Sipariş Numarası</dt>
                        <dd class="col-sm-9"> @Model.OrderNumber </dd>

                        <dt class="col-sm-3">Toplam</dt>
                        <dd class="col-sm-9"> @Model.OrderTotal  <i class="fa fa-try" aria-hidden="true"></i> </dd>

                        <dt class="col-sm-3">Sipariş tarihi</dt>
                        <dd class="col-sm-9"> @Model.OrderDate</dd>

                        @*<dt class="col-sm-3">Sipariş Durumu</dt>
                            <dd class="col-sm-9"> @Model.SiparisDurumu </dd>*@





                        <dt class="col-sm-3">Adres</dt>
                        <dd class="col-sm-9">

                            @Model.AdresBasligi
                            <hr />

                            @Model.Adres
                            <br />
                            @Model.IlAdi -  @Model.IlceAdi


                        </dd>


                        <dt class="col-sm-3">Ürünler</dt>
                        <dd class="col-sm-9">

                            <table class="table table-bordered">
                                <thead>
                                    <tr>
                                        <th>Image</th>
                                        <th style="width:45%">Ürün İsmi</th>
                                        <th>Miktar</th>
                                        <th>Ürün Fiyatı</th>
                                        <th style="width:40%"></th>
                                    </tr>

                                </thead>

                                <tbody>



                                    <tr>
                                        <td><img src="~/Upload/@Model.img" width="70" /></td>
                                        <td>@Model.UrunAdi</td>
                                        <td>@Model.Quantity</td>
                                        <td>@Model.Price  <i class="fa fa-try" aria-hidden="true"></i></td>
                                        <td><a href="~/Home/Details/@Model.UrunId" class="btn btn-primary" target="_blank">Ürün Detayı</a></td>
                                    </tr>



                                </tbody>

                            </table>

                        </dd>





                    </d1>


                </div>

            </div>

        </div>







